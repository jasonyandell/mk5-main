{
  "name": "mk5",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run postbuild",
    "postbuild": "mkdir -p dist/perfects && cp dist/index.html dist/perfects/index.html && cp dist/index.html dist/404.html",
    "prebuild": "npm run generate:strength-table",
    "predev": "npm run generate:strength-table",
    "generate:strength-table": "npx tsx scripts/generate-strength-table.ts",
    "generate:perfects": "npx tsx scripts/find-perfect-hands.ts --json > data/perfect-hands.json && npx tsx scripts/find-3hand-leftover.ts --json > data/3hand-partitions.json",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json --fail-on-warnings",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:verbose": "VERBOSE_TESTS=true vitest --run",
    "test:watch": "vitest",
    "test:watch:verbose": "VERBOSE_TESTS=true vitest",
    "test:e2e": "playwright test --workers=4",
    "test:e2e:ci": "playwright test --config=playwright.ci.config.ts --quiet",
    "test:static": "npm run typecheck & npm run check & npm run lint & wait",
    "test:all": "npm run test:static && npm run test -- --coverage --coverage.reporter=text-summary && npm run test:e2e -- --quiet",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint src --ext .ts,.svelte",
    "format": "prettier --write src",
    "deploy": "npm run build && gh-pages -d dist",
    "postinstall": "test \"$CI\" != \"true\" && npx playwright install --with-deps || true"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.32",
    "@playwright/test": "^1.54.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.23",
    "daisyui": "^4.12.24",
    "eslint": "^9.39.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.8.3",
    "vite": "^7.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "culori": "^4.0.2",
    "svelte-awesome-color-picker": "^4.0.2"
  }
}
