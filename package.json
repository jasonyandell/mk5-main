{
  "name": "mk5",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:verbose": "VERBOSE_TESTS=true vitest --run",
    "test:watch": "vitest",
    "test:watch:verbose": "VERBOSE_TESTS=true vitest",
    "test:e2e": "playwright test --workers=8",
    "test:all": "npm run typecheck && npm run check && npm run lint && npm run test && npm run test:e2e",
    "lint": "eslint src --ext .ts,.svelte",
    "format": "prettier --write src"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.32",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "svelte": "^5.36.17",
    "svelte-check": "^4.3.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@playwright/test": "^1.54.1"
  }
}
